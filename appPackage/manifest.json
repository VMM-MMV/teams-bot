{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.21/MicrosoftTeams.schema.json",
    "manifestVersion": "1.21",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "PGI Procedures Expert",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Procedures Expert",
        "full": "Planet Group Intelligent Procedures Expert"
    },
    "description": {
        "short": "A PGI Procedures Expert",
        "full": "A Planet Group Intelligent Procedures Expert that helps you with questions about procedures and policies."
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "team",
                "groupChat",
                "personal"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "I want to go on vacation what should I do?",
                            "description": "Answer to the question: I want to go on vacation what should I do?"
                        },
                        {
                            "title": "How do I contribute to a gitlab project?",
                            "description": "Answer to the question: How do I contribute to a gitlab project?"
                        },
                        {
                            "title": "/new_session",
                            "description": "Start a new session with the bot. This will clear the chat history and start fresh."
                        }
                    ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}
